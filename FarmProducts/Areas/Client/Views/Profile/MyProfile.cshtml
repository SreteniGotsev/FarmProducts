@model CustomerViewModel;


    <div class="profil-container">

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                        <div class="mt-3">
                            <h4>@Model.Name @Model.Surname</h4>
                            <p class="text-muted font-size-sm">@Model.Address</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="profil-data">
            <div class="card mb-3">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary"> 
                            @Model.Name
                        </div>
                        <div class="col-sm-3">
                            <h6 class="mb-0">Surname</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Surname
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Email
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Mobile</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.PhoneNumber
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Address</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            @Model.Address
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-info" asp-area="Client" asp-controller="Profile" asp-action="EditProfile">Edit</a>
                        </div>
                    </div>
                </div>
            </div>





        </div>

    </div>

